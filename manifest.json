{
  "manifest_version": 3,
  "name": "WhatsApp Web File Viewer",
  "version": "1.2.0",
  "description": "View PDFs, CSVs, TXTs, JSONs directly in WhatsApp Web without downloading them.",
  "permissions": [],
  "host_permissions": ["https://web.whatsapp.com/*"],
  "content_scripts": [
    {
      "matches": ["https://web.whatsapp.com/*"],
      "js": ["utils/csvTools.js", "fileViewer.js"],
      "run_at": "document_start",
      "world": "MAIN"
    }
  ]
}
